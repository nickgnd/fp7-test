<% @organizations.each do |org| %>

    <tr>
        <td><%= org.id %></td>
        <td><%= org.organization_name %></td>
        <td><%= org.organization_short_name %></td>
        <td><%= org.organization_url %></td>
        <td><%= org.country %></td>
        <td class="text-center"><%= org.num_programmes %></td>
        <td class="text-center"><%= org.num_projects %></td>
        <td class="text-right"><%= org.sum_shares %></td>
    </tr>

<% end %>
